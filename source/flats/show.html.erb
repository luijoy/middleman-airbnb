<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

  <!-- Inject flat data in template -->

  <div class="banner flat-banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_name %>'); height: 50vh; background-position: center;">
  </div>
  <div class="header-flat">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-1">
          <div class="header-flat-details">
            <div class="header-flat-name">
              <div class="header-flat-owner">
                <h2>
                  <%=flat.description%>
                </h2>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-host" %>
                  <div class="header-flat-city_name">
                    <p>
                      <%= flat.city_name %>
                    </p>
                  </div>
              </div>
              <div class="header-flat-description">
              </div>

              <p class="rating">
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
                <i class="fa fa-star" style="color: #ffb400"></i>
              </p>
            </div>
            <h2>About this flat</h2>
            <p>
              This one bedroom studio lodges 2 people (there's 1 double bed) it is located in the city center, in a calm traditional residential
              area near city´s main Avenue - 3 minutes walk from Sacré Coeur.
            </p>
          </div>
        </div>
        <div class="col-xs-12 col-sm-4">
          <div class="booking-form">
            <form action="#">
              <h4>Book this flat</h4>
              <div class="form-group">
                <div class="row">
                  <div class="col-xs-6">
                    <input class="form-control" placeholder="checkin" id="checkin" type="text">
                  </div>
                  <div class="col-xs-6">
                    <input class="form-control" placeholder="checkout" type="text">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <select name="" id="guests" class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
              <input class="btn btn-danger" value="Book it" style="width: 100%" type="submit">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row details">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <hr>
      <div class="row" id="flat-data">
        <div class="col-xs-12 col-sm-2">
          The Space
        </div>
        <div class="col-xs-12 col-sm-4">
          <ul class="list-unstyled">
            <li>Accommodates:
              <strong>2</strong>
            </li>
            <li>Bathrooms:
              <strong>1</strong>
            </li>
            <li>Bed type:
              <strong>Real Bed</strong>
            </li>
            <li>Bedrooms:
              <strong>1</strong>
            </li>
          </ul>
        </div>
        <div class="col-xs-12 col-sm-4">
          <ul class="list-unstyled">
            <li>Beds:
              <strong>1</strong>
            </li>
            <li>Property type:
              <strong>Apartment</strong>
            </li>
            <li>Room type:
              <strong>Entire home/apt</strong>
            </li>
          </ul>
        </div>
      </div>
      <hr>
      <div class="row" id="flat-data">
        <div class="col-xs-12 col-sm-2">
          Amenities
        </div>
        <div class="col-xs-12 col-sm-4">
          <ul class="list-unstyled">
            <li>
              <i class="fa fa-cutlery"></i>
              <strong>Kitchen</strong>
            </li>
            <li>
              <i class="fa fa-wifi"></i>
              <strong>Wifi</strong>
            </li>
          </ul>
        </div>
        <div class="col-xs-12 col-sm-4">
          <ul class="list-unstyled">
            <li>
              <i class="fa fa-desktop"></i>
              <strong>TV</strong>
            </li>
            <li>
              <i class="fa fa-glass"></i>
              <strong>Welcome drink</strong>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>